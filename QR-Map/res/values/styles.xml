<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppBaseThemeDark" parent="Theme.AppCompat">
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="colorPrimary">@color/primary</item>
    	<item name="colorPrimaryDark">@color/primary_dark</item>
    	<item name="colorAccent">@color/action</item>
    	<item name="android:actionBarStyle">@style/MyActionBar</item>
    	<item name="text_color">@color/text_light</item>
    	<item name="background_color">@color/card_background_light</item>
    </style>
    
    <style name="AppThemeDark" parent="AppBaseThemeDark">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="colorPrimary">@color/primary</item>
    	<item name="colorPrimaryDark">@color/primary_dark</item>
    	<item name="colorAccent">@color/action</item>
    	<item name="text_color">@color/text_dark</item>
    	<item name="background_color">@color/card_background_dark</item>
    </style>
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    	<item name="android:actionMenuTextColor">@color/white</item>
    </style>

</resources>
